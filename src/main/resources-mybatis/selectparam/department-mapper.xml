<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="club.lylgjiang.mybatis.selectparam.DepartmentMapper">

    <!--public Department getDeptById(Integer id);-->
    <select id="getDeptById" resultType="club.lylgjiang.mybatis.pojo.Department" databaseId="mysql">
        select id, dept_name departmentName from tb1_department where id=#{id}
    </select>
    
    
    <resultMap id="deptCol" type="club.lylgjiang.mybatis.pojo.Department">
        <id column="did" property="id"></id>
        <result column="deptName" property="departmentName"></result>
        <collection property="employees" ofType="club.lylgjiang.mybatis.pojo.Employee" fetchType="lazy">
            <id column="eid" property="id"></id>
            <result column="empName" property="lastName"></result>
            <result column="gender" property="gender"></result>
            <result column="email" property="email"></result>
        </collection>
    </resultMap>
    <!--public Department getDeptByIdCol(Integer id);-->
    <select id="getDeptByIdCol" resultMap="deptCol" databaseId="mysql">
        SELECT d.`id` did, d.`dept_name` deptName, 
            e.`id` eid, e.`last_name` empName, e.`gender` gender, e.`email` email 
        FROM tb1_department d 
        LEFT JOIN tb1_employee e 
        ON e.`dept_id`=d.`id` 
        WHERE d.`id`= #{id}
    </select>
    
    
    <resultMap id="deptColStep" type="club.lylgjiang.mybatis.pojo.Department">
        <id column="id" property="id"></id>
        <result column="dept_name" property="departmentName"></result>
        <collection property="employees" select="club.lylgjiang.mybatis.selectparam.EmployeeMapper.getEmpById"
                    column="{id=id}">
        </collection>
    </resultMap>
    <!--public Department getDeptByIdColStep(Integer id);-->
    <select id="getDeptByIdColStep" resultMap="deptColStep" databaseId="mysql">
        SELECT * FROM tb1_department WHERE id = #{id}
    </select>
    
</mapper>